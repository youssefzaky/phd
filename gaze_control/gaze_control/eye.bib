journal = {European Journal of Neuroscience},
keywords = {Eye-hand coordination,Fixation,Monkey,Reaching,Saccade},
pages = {1966--1982},
pmid = {22128795},
title = {{Neuronal activity in the superior colliculus related to saccade initiation during coordinated gaze-reach movements}},
volume = {34},
year = {2011}
}
