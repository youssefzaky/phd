journal = {Journal of neurophysiology},
keywords = {Animals,Feedback,Female,Macaca mulatta,Mathematics,Microelectrodes,Models, Neurological,Neurons,Neurons: physiology,Saccades,Saccades: physiology,Superior Colliculi,Superior Colliculi: physiology,Time Factors},
