issn = {0022-3077},
journal = {Journal of neurophysiology},
keywords = {Acceleration,Animals,Behavior, Animal,Computer Simulation,Discrimination (Psychology),Head,Humans,Mathematics,Models, Neurological,Motion Perception,Motion Perception: physiology,Neural Networks (Computer),Nonlinear Dynamics,Orientation,Otolithic Membrane,Otolithic Membrane: physiology,Semicircular Canals,Semicircular Canals: physiology,Space Perception,Space Perception: physiology},
month = aug,
number = {2},
pages = {905--25},
pmid = {15056677},
title = {{An integrative neural network for detecting inertial motion and head orientation.}},
url = {http://jn.physiology.org/content/92/2/905},
volume = {92},
year = {2004}
}
@article{Grossberg1997,
