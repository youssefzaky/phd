journal = {Journal of neurophysiology},
keywords = {Brain Stem,Brain Stem: physiology,Eye Movements,Eye Movements: physiology,Fixation, Ocular,Fixation, Ocular: physiology,Humans,Models, Neurological,Psychomotor Performance,Psychomotor Performance: physiology,Reflex, Vestibulo-Ocular,Reflex, Vestibulo-Ocular: physiology},
